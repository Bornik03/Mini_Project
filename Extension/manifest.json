{
    "manifest_version": 3,
    "name": "News Summarizer",
    "version": "1.0",
    "description": "Summarizes news articles from the current tab",
    "permissions": ["activeTab", "storage", "tabs"],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon.png",
            "48": "icon.png",
            "128": "icon.png"
        }
    }
}